<UserControl x:Class="SverigeSpelet.SverigeSpeletDockpaneView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SverigeSpelet"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="300">

    <UserControl.Resources>
        <!-- Konverterar bool till Visibility -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:BoolToEmojiConverter x:Key="BoolToEmoji"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <TabControl>

            <!-- === Flik 1: Spelet === -->
            <TabItem Header="Sverige Spelet" x:Name="tabHuvud">
                <!-- ScrollViewer gör att allt syns även om det blir långt -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        
                        <!-- === START-VY === -->
                        <StackPanel x:Name="pnlInställningar"
                        Margin="0"
                        Visibility="{Binding ShowSettingsView, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="SverigeSpelet" FontSize="18" FontWeight="Bold"
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Välj kategori:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbKategori" Height="25" Margin="0,0,0,10">
                                <ComboBoxItem Content="Kommuner" IsSelected="True"/>
                            </ComboBox>

                            <TextBlock Text="Svårighetsgrad:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbSvårighet"
                                      Height="25" Margin="0,0,0,15"
                                      ItemsSource="{Binding DifficultyLevels}"
                                      SelectedItem="{Binding DifficultyLevel, Mode=TwoWay}"/>

                            <TextBlock Text="Spelarens namn:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtSpelareNamn"
                         Height="25" Margin="0,0,0,15"
                         Text="{Binding PlayerName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <Button x:Name="btnStarta"
                        Content="Starta Spelet"
                        Height="35"
                        FontWeight="Bold"
                        Background="#FF0078D7"
                        Foreground="White"
                        Command="{Binding StartGameCommand}"
                        HorizontalAlignment="Center"
                        Width="150"/>
                        </StackPanel>

                        <!-- === SPEL-VY === -->
                        <StackPanel x:Name="pnlSpel"
                        Margin="0"
                        Visibility="{Binding ShowGameView, Converter={StaticResource BoolToVis}}">
                            <TextBlock x:Name="txtFråga"
                           Text="{Binding CurrentQuestion}"
                           FontSize="18"
                           FontWeight="Bold"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"
                           MinHeight="40"
                           Background="#FFF0F0F0"
                           Padding="8"
                           TextAlignment="Center"/>

                            <TextBlock Text="{Binding DistanceInfo}" FontSize="13" FontWeight="SemiBold" Foreground="DarkBlue" TextAlignment="Center" Margin="0,0,0,3"/>
                            <TextBlock Text="{Binding PinInfo}" FontSize="11" Foreground="Gray" FontStyle="Italic" TextAlignment="Center" Margin="0,0,0,10" TextWrapping="Wrap"/>

                            <Grid Margin="0,0,0,10" Height="45">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1" VerticalAlignment="Center">
                                    <ProgressBar Height="18" Margin="2" Value="{Binding TimeProgress}"/>
                                </Border>
                                <TextBlock Grid.Row="1"
                               Text="{Binding TimeLeftText}"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"
                               Foreground="DarkGray"
                               FontWeight="SemiBold"/>
                            </Grid>

                            <TextBlock Text="{Binding PointsText}"
                           FontSize="15" FontWeight="Bold" Margin="0,0,0,5" Foreground="DarkGreen"/>
                            <TextBlock Text="{Binding QuestionCountText}"
                           FontSize="13" Margin="0,0,0,10" FontWeight="SemiBold"/>

                            <Border Background="#FFF8F8F8" BorderBrush="LightGray" BorderThickness="1"
                        CornerRadius="3" Padding="8" Margin="0,0,0,10">
                                <TextBlock Text="{Binding ResultText}"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="DarkGreen"
                               TextAlignment="Left"
                               MinHeight="30"/>
                            </Border>

                            <Border Background="#FFF0F7FF" BorderBrush="#FFBBDEFB" BorderThickness="1"
                        CornerRadius="3" Padding="8" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                                        <TextBlock Text="📈" FontSize="14" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding HistorikSammanfattning}"
                                       FontSize="12" FontWeight="SemiBold" Foreground="#FF1565C0"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding SpelHistorik.Count, StringFormat={}Totalt: {0} frågor}"
                                   FontSize="11" Foreground="Gray" Grid.Column="1"
                                   VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- Historik med större utrymme -->
                            <Border BorderBrush="LightGray" BorderThickness="1"
                        Background="#FFF8F8F8" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border Background="#FFE8E8E8" Padding="8" Grid.Row="0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="📊 Spelhistorik" FontWeight="Bold" FontSize="12" Grid.Column="0"/>
                                            <TextBlock Text="{Binding SpelHistorik.Count, StringFormat={}({0})}"
                                           FontSize="11" Foreground="Gray" Grid.Column="1"
                                           VerticalAlignment="Center" Margin="5,0,0,0"/>
                                        </Grid>
                                    </Border>

                                    <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1" MaxHeight="250">
                                        <ItemsControl ItemsSource="{Binding SpelHistorik}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Padding="6,4" Margin="1,0,1,1" BorderThickness="0,0,0,1" BorderBrush="#FFE0E0E0"
                                                MouseLeftButtonDown="HistoryItem_MouseLeftButtonDown">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding VarRätt, Converter={StaticResource BoolToEmoji}}"
                                                           FontSize="11" Margin="0,0,5,0"/>
                                                            <TextBlock Text="{Binding Kommun}" FontWeight="SemiBold" FontSize="11" MinWidth="70"/>
                                                            <TextBlock Text="-" FontSize="10" Foreground="Gray" Margin="3,0,3,0"/>
                                                            <TextBlock Text="{Binding Poäng}" FontSize="10" Foreground="Green" FontWeight="Bold" MinWidth="20"/>
                                                            <TextBlock Text="p" FontSize="8" Foreground="Green" Margin="0,0,5,0"/>
                                                            <TextBlock Text="-" FontSize="10" Foreground="Gray" Margin="3,0,3,0"/>
                                                            <TextBlock Text="{Binding Avstånd, StringFormat={}{0:F1}km}"
                                                           FontSize="9" Foreground="Gray" MinWidth="40"/>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Grid>
                            </Border>

                            <Button x:Name="btnAvsluta"
                        Content="{Binding AvslutaKnappText}"
                        Height="35"
                        Width="160"
                        HorizontalAlignment="Center"
                        Background="#FFD9534F"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="13"
                        Command="{Binding EndGameCommand}"
                        Margin="0,10,0,0"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- === Flik 2: Topplista === -->
            <TabItem Header="Topplista">
                <StackPanel Margin="10">
                    <TextBlock Text="🏆 Veckans topplista"
                               FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                    <DataGrid x:Name="dgTopplista"
                              Height="300"
                              AutoGenerateColumns="False"
                              ItemsSource="{Binding TopList}"
                              CanUserAddRows="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Namn" Binding="{Binding PlayerName}" Width="*"/>
                            <DataGridTextColumn Header="Poäng" Binding="{Binding Points}" Width="70"/>
                            <DataGridTextColumn Header="Svårighet" Binding="{Binding DifficultyLevel}" Width="80"/>
                            <DataGridTextColumn Header="Datum" Binding="{Binding Date, StringFormat={}{0:dd/MM}}" Width="60"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button x:Name="btnUppdateraTopplista"
                            Content="Uppdatera topplista"
                            Margin="0,10,0,0"
                            Height="30"
                            Width="180"
                            HorizontalAlignment="Center"
                            Command="{Binding UpdateTopListCommand}"
                            Background="#FF0078D7" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
            </TabItem>
            
        </TabControl>
    </Grid>
</UserControl>
