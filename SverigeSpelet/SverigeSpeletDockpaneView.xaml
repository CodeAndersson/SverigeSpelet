<UserControl x:Class="SverigeSpelet.SverigeSpeletDockpaneView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="300">
    <Grid Margin="5">
        <TabControl>
            <!-- Huvudflikan - visar antingen inställningar eller spel -->
            <TabItem Header="Sverige Spelet" x:Name="tabHuvud">
                <Grid Height="414" Width="285">
                    <!-- START VY -->
                    <StackPanel x:Name="pnlInställningar" Margin="10" Visibility="{Binding ShowSettingsView}">
                        <TextBlock Text="Välj kategori:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cmbKategori" Height="25" Margin="0,0,0,15">
                            <ComboBoxItem Content="Kommuner" IsSelected="True"/>
                        </ComboBox>

                        <TextBlock Text="Svårighetsgrad:" FontWeight="Bold" Margin="0,0,0,5" />
                        <ComboBox x:Name="cmbSvårighet" Height="25" Margin="0,0,0,15">
                            <ComboBoxItem Content="Lätt" IsSelected="True"/>
                            <ComboBoxItem Content="Medel"/>
                            <ComboBoxItem Content="Svår"/>
                        </ComboBox>

                        <TextBlock Text="Spelarens namn:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtSpelareNamn" Height="25" Margin="0,0,0,20" Text="Gäst"/>

                        <Button x:Name="btnStarta" Content="Starta Spelet" Height="30" FontWeight="Bold"
                                Background="#FF0078D7" Foreground="White" Click="BtnStarta_Click"/>
                    </StackPanel>

                    <!-- SPEL VY -->
                    <StackPanel x:Name="pnlSpel" Margin="10" Visibility="{Binding ShowGameView}" >
                        <!-- Frågetext -->
                        <TextBlock x:Name="txtFråga" FontSize="16" FontWeight="Bold" TextWrapping="Wrap"
                                  Margin="0,0,0,15" MinHeight="40" Background="#FFF0F0F0" Padding="5"/>
                        <!-- PROGRESS BAR med tidtext -->
                        <Grid Margin="0,0,0,15" Height="40">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Progress bar -->
                            <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1" VerticalAlignment="Center">
                                <ProgressBar Height="15" Margin="2" Value="{Binding TimeProgress}"/>
                            </Border>

                            <!-- Tid kvar text UNDER progress bar -->
                            <TextBlock Grid.Row="1" Text="{Binding TimeLeftText}" FontSize="11"
                                      HorizontalAlignment="Center" Margin="0,5,0,0" Foreground="DarkGray"/>
                        </Grid>

                        <!-- Poänginformation -->
                        <TextBlock Text="{Binding PointsText}" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding QuestionCountText}" FontSize="12" Margin="0,0,0,15"/>

                        <!-- Resultattext -->
                        <TextBlock Text="{Binding ResultText}" FontSize="12" FontWeight="Bold"
                                  MinHeight="30" VerticalAlignment="Center" TextAlignment="Center"
                                  Foreground="Green" Margin="0,0,0,20"/>

                        <!-- Avsluta knapp -->
                        <Button x:Name="btnAvsluta" Content="Avsluta Spel" Height="25" Margin="0,20,0,0"
                                Background="#FFD9534F" Foreground="White" Click="BtnAvsluta_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Topplista-flikan -->
            <TabItem Header="Topplista">
                <StackPanel Margin="10">
                    <TextBlock Text="Veckans topplista" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                    <DataGrid x:Name="dgTopplista" Height="300" AutoGenerateColumns="False" ItemsSource="{Binding TopList}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Namn" Binding="{Binding PlayerName}" Width="*"/>
                            <DataGridTextColumn Header="Poäng" Binding="{Binding Points}" Width="80"/>
                            <DataGridTextColumn Header="Svårighet" Binding="{Binding DifficultyLevel}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="btnUppdateraTopplista" Content="Uppdatera topplista"
                            Margin="0,10,0,0" Height="25" Click="BtnUppdateraTopplista_Click"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>