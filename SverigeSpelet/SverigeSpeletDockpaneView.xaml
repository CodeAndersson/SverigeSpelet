<UserControl x:Class="SverigeSpelet.SverigeSpeletDockpaneView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <Grid Margin="5">
        <TabControl>
            <!-- Startfliken -->
            <TabItem Header="Inställningar">
                <StackPanel Margin="10">
                    <TextBlock Text="Välj kategori:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbKategori" Height="25" Margin="0,0,0,10">
                        <ComboBoxItem Content="Kommuner" IsSelected="True"/>
                        <ComboBoxItem Content="Län"/>
                        <ComboBoxItem Content="Städer"/>
                        <ComboBoxItem Content="Postnummer"/>
                    </ComboBox>

                    <TextBlock Text="Svårighetsgrad:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbSvårighet" Height="25" Margin="0,0,0,10">
                        <ComboBoxItem Content="Lätt" IsSelected="True"/>
                        <ComboBoxItem Content="Medel"/>
                        <ComboBoxItem Content="Svår"/>
                    </ComboBox>

                    <TextBlock Text="Spelarens namn:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtSpelareNamn" Height="25" Margin="0,0,0,15" Text="Gäst"/>

                    <Button x:Name="btnStarta" Content="Starta Spelet" Height="30" FontWeight="Bold" 
                            Background="#FF0078D7" Foreground="White" Click="BtnStarta_Click"/>
                </StackPanel>
            </TabItem>

            <!-- Spelflikan -->
            <TabItem x:Name="tabSpel" Header="Spel" IsEnabled="False">
                <StackPanel Margin="10">
                    <TextBlock x:Name="txtFråga" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" 
                              Margin="0,0,0,10" Height="40"/>

                    <Border BorderBrush="LightGray" BorderThickness="1" Margin="0,0,0,5">
                        <ProgressBar x:Name="pbTid" Height="15" Margin="2"/>
                    </Border>

                    <TextBlock x:Name="txtTidKvar" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock x:Name="txtPoäng" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock x:Name="txtFrågaRäknare" FontSize="12" Margin="0,0,0,10"/>
                    <TextBlock x:Name="txtResultat" FontSize="12" FontWeight="Bold" Height="30" 
                              VerticalAlignment="Center" TextAlignment="Center"/>
                </StackPanel>
            </TabItem>

            <!-- Scoreboard-flikan -->
            <TabItem Header="Topplista">
                <StackPanel Margin="10">
                    <TextBlock Text="Veckans topplista" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                    <DataGrid x:Name="dgTopplista" Height="300" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Namn" Binding="{Binding SpelareNamn}" Width="*"/>
                            <DataGridTextColumn Header="Poäng" Binding="{Binding Poäng}" Width="80"/>
                            <DataGridTextColumn Header="Svårighet" Binding="{Binding Svårighetsgrad}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="btnUppdateraTopplista" Content="Uppdatera topplista" 
                            Margin="0,10,0,0" Height="25" Click="BtnUppdateraTopplista_Click"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>